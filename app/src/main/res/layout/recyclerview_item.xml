<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:minHeight="88dp"
    android:id="@+id/recyclerview">

    <TextView
        android:layout_alignParentStart="true"
        android:id="@+id/initalSeparator"
        android:layout_width="match_parent"
        android:textSize="25dp"
        android:visibility="gone"
        android:gravity="center"
        android:layout_height="wrap_content"
        tools:text="Date"
        android:background="@android:color/darker_gray"/>

    <ImageView
        android:id="@+id/mtrl_list_item_icon"
        android:layout_below="@id/initalSeparator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"/>


    <TextView
        android:id="@+id/concertName"
        android:layout_below="@id/initalSeparator"
        android:fontFamily="@font/bebas_neue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/mtrl_list_item_icon"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:textAppearance="?attr/textAppearanceHeadline4"
        android:textColor="@color/mtrl_list_item_tint"
        tools:text="@tools:sample/date/day_of_week" />

    <TextView
        android:id="@+id/artistPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/concertName"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/mtrl_list_item_icon"
        android:maxLines="1"
        android:paddingEnd="16dp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/mtrl_list_item_tint"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/concertVenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/artistPreview"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/mtrl_list_item_icon"
        android:paddingEnd="16dp"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="@color/mtrl_list_item_tint"/>

    <ToggleButton
        android:id="@+id/favoriteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/button_states"
        android:layout_alignParentEnd="true"
        android:textOff="@null"
        android:textOn="@null"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_alignBaseline="@id/concertVenue"
       />

    <TextView
        android:id="@+id/separatorView"
        android:layout_width="match_parent"
        android:layout_below="@id/favoriteButton"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:text="Date"
        android:background="@android:color/darker_gray"/>
</RelativeLayout>